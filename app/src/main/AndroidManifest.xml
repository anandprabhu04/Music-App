<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.example.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/now_playing"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".AllSongsActivity"
            android:label="@string/all_songs"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/albums"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/artists"
            android:parentActivityName=".HomeActivity"/>
        <activity android:name=".PlayListsActivity"
            android:label="@string/play_lists"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".StoreActivity"
            android:label="@string/store"
            android:parentActivityName=".HomeActivity" />
    </application>

</manifest>